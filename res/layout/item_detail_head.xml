<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_app_icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="17sp" />

        <RatingBar
            android:id="@+id/rb_app_stars"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/txt_app_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_app_icon"
            android:progressDrawable="@drawable/bg_ratinbar"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_app_icon"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/txt_down_num"
                    style="@style/DetailTextViewItemStyle"
                    />

                <TextView
                    android:id="@+id/txt_version"
                    style="@style/DetailTextViewItemStyle"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_date"
                    style="@style/DetailTextViewItemStyle"
                     />

                <TextView
                    android:id="@+id/txt_size"
                    style="@style/DetailTextViewItemStyle"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</FrameLayout>